<Window x:Class="SessionApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления текстильным производством" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FFE0D5CA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с логотипом -->
        <Border Grid.Row="0" Background="#B5D5CA" Padding="20,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Logo/logo-04.jpg" Width="180" Height="60" Margin="0,0,20,0"/>
                <TextBlock Text="Система управления текстильным производством" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="Black" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Контент -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>