<Page x:Class="SessionApp1.Views.WarehouseScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Экран кладовщика"
      Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20,10">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Logo/logo-04.jpg" Width="60" Height="40" Margin="0,0,20,0"/>
                    <TextBlock x:Name="WelcomeText" FontSize="18" FontWeight="Bold" 
                               Foreground="{StaticResource TextDarkColor}" VerticalAlignment="Center"/>
                </StackPanel>
                <Button x:Name="LogoutButton" Content="Выход" 
                        Style="{StaticResource AccentButton}"
                        Click="LogoutButton_Click" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Навигационная панель -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryLightColor}" Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="FabricsButton" Content="Ткани" 
                        Style="{StaticResource StandardButton}" Margin="0,0,10,0"
                        Click="FabricsButton_Click"/>
                <Button x:Name="FittingsButton" Content="Фурнитура" 
                        Style="{StaticResource StandardButton}" Margin="0,0,10,0"
                        Click="FittingsButton_Click"/>
                <Button x:Name="MaterialStockButton" Content="Учет остатков" 
                        Style="{StaticResource StandardButton}" Margin="0,0,10,0"
                        Click="MaterialStockButton_Click"/>
                <Button x:Name="MaterialReceiptButton" Content="Создать поступление" 
                        Style="{StaticResource StandardButton}"
                        Click="CreateReceipt_Click"/>
            </StackPanel>
        </Border>


        <!-- Основной контент -->
        <Frame x:Name="ContentFrame" Grid.Row="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>