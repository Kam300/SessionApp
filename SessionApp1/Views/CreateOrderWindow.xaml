<Window x:Class="SessionApp1.Views.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="500" Width="700"
        WindowStartupLocation="CenterScreen" Background="#FFE0D5CA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Оформление заказа" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Заказчик:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="CustomerNameTextBox" Width="300" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Дата заказа:" Width="120" VerticalAlignment="Center"/>
                <TextBlock x:Name="OrderDateTextBlock" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="OrderItemsDataGrid" Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding ProductArticle}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название" Binding="{Binding ProductName}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Цена за ед." Binding="{Binding Price, StringFormat=C}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, StringFormat=C}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock x:Name="TotalAmountTextBlock" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Оформить заказ" Width="150" Height="30" Margin="10,0" Click="CreateOrder_Click"/>
            <Button Content="Отмена" Width="100" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
