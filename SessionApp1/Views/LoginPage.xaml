<Page x:Class="SessionApp1.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация"
      Background="#FFE0D5CA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Background="White" 
                CornerRadius="10" Padding="40" 
                MaxWidth="400" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Авторизация" FontSize="28" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"
                          Foreground="Black"/>

                <TextBlock Text="Логин:" FontSize="16" Margin="0,0,0,5" Foreground="Black"/>
                <TextBox x:Name="LoginTextBox" FontSize="16" Padding="10" 
                         Height="40" Margin="0,0,0,15"/>

                <TextBlock Text="Пароль:" FontSize="16" Margin="0,0,0,5" Foreground="Black"/>
                <PasswordBox x:Name="PasswordBox" FontSize="16" Padding="10" 
                            Height="40" Margin="0,0,0,20"/>

                <Button x:Name="LoginButton" Content="Войти" 
                        FontSize="16" Height="45" 
                        Background="#FFB5D5CA" Foreground="Black"
                        Click="LoginButton_Click" Margin="0,0,0,15"/>

                <Button x:Name="RegisterButton" Content="Регистрация заказчика" 
                        FontSize="14" Height="35" 
                        Background="#FFD1FCFC" Foreground="Black"
                        Click="RegisterButton_Click"/>

                <TextBlock x:Name="ErrorMessage" Foreground="Red" 
                          HorizontalAlignment="Center" Margin="0,15,0,0"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
