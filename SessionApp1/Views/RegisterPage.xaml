<Page x:Class="SessionApp1.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация заказчика"
      Background="#FFE0D5CA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Background="White" 
                CornerRadius="10" Padding="40" 
                MaxWidth="400" HorizontalAlignment="Center">
            <StackPanel>
                <!-- Заголовок с логотипом -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image Source="/Logo/logo-01.jpg" Width="60" Height="60" Margin="0,0,15,0"/>
                    <TextBlock Text="Регистрация заказчика" FontSize="24" FontWeight="Bold" 
                              VerticalAlignment="Center" Foreground="Black"/>
                </StackPanel>

                <TextBlock Text="ФИО:" FontSize="16" Margin="0,0,0,5" Foreground="Black"/>
                <TextBox x:Name="FullNameTextBox" FontSize="16" Padding="10" 
                         Height="40" Margin="0,0,0,15"/>

                <TextBlock Text="Логин:" FontSize="16" Margin="0,0,0,5" Foreground="Black"/>
                <TextBox x:Name="LoginTextBox" FontSize="16" Padding="10" 
                         Height="40" Margin="0,0,0,15"/>

                <TextBlock Text="Пароль:" FontSize="16" Margin="0,0,0,5" Foreground="Black"/>
                <PasswordBox x:Name="PasswordBox" FontSize="16" Padding="10" 
                            Height="40" Margin="0,0,0,15"/>

                <TextBlock Text="Подтверждение пароля:" FontSize="16" Margin="0,0,0,5" Foreground="Black"/>
                <PasswordBox x:Name="ConfirmPasswordBox" FontSize="16" Padding="10" 
                            Height="40" Margin="0,0,0,20"/>

                <Button x:Name="RegisterButton" Content="Зарегистрироваться" 
                        FontSize="16" Height="45" 
                        Background="#B5D5CA" Foreground="Black"
                        Click="RegisterButton_Click" Margin="0,0,0,15"/>

                <Button x:Name="BackButton" Content="Назад к авторизации" 
                        FontSize="14" Height="35" 
                        Background="#D1EEFC" Foreground="Black"
                        Click="BackButton_Click"/>

                <TextBlock x:Name="ErrorMessage" Foreground="Red" 
                          HorizontalAlignment="Center" Margin="0,15,0,0"
                          TextWrapping="Wrap"/>

                <TextBlock x:Name="SuccessMessage" Foreground="Green" 
                          HorizontalAlignment="Center" Margin="0,15,0,0"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
