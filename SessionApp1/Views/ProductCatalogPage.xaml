<Page x:Class="SessionApp1.Views.ProductCatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:SessionApp1.Converters"
      Title="Каталог изделий" Background="#FFE0D5CA">

    <Page.Resources>
        <conv:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Каталог изделий" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <DataGrid x:Name="ProductsDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  AlternatingRowBackground="#FFF5F5F5"
                  GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Изображение" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" 
                                   Width="80" Height="60" Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Размер (мм)" Width="150">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} × {1}">
                            <Binding Path="WidthMm"/>
                            <Binding Path="LengthMm"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="QuantityTextBox" Width="80" Text="1" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Content="Добавить в заказ" Width="150" Height="30" Click="AddToOrder_Click"/>
            <Button Content="Перейти к заказу" Width="150" Height="30" Margin="10,0,0,0" Click="GoToOrder_Click"/>
        </StackPanel>
    </Grid>
</Page>
