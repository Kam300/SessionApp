<Page x:Class="SessionApp1.Views.CustomerScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Экран заказчика"
      Background="#FFE0D5CA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#B5D5CA" Padding="20,10">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/Logo/logo-01.jpg" Width="40" Height="40" Margin="0,0,15,0"/>
                    <TextBlock x:Name="WelcomeText" FontSize="18" FontWeight="Bold" 
                               Foreground="Black" VerticalAlignment="Center"/>
                </StackPanel>
                <Button x:Name="LogoutButton" Content="Выход" 
                        FontSize="14" Padding="15,5" 
                        Background="#E0A9AF" Foreground="Black"
                        Click="LogoutButton_Click" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Навигационная панель -->
        <Border Grid.Row="1" Background="White" Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CatalogButton" Content="Каталог изделий" 
                        FontSize="16" Padding="20,10" Margin="0,0,10,0"
                        Background="#D1EEFC" Foreground="Black"
                        Click="OpenCatalog_Click"/>
                <Button x:Name="OrdersButton" Content="Мои заказы" 
                        FontSize="16" Padding="20,10"
                        Background="#D1EEFC" Foreground="Black"
                        Click="MyOrders_Click"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Frame x:Name="ContentFrame" Grid.Row="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>