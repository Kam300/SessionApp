<Page x:Class="SessionApp1.Views.CustomerScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Экран заказчика"
      Background="#FFE0D5CA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#FFB5D5CA" Padding="20,10">
            <Grid>
                <TextBlock x:Name="WelcomeText" FontSize="18" FontWeight="Bold" 
                           Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Button x:Name="LogoutButton" Content="Выход" 
                        FontSize="14" Padding="15,5" 
                        Background="#FFE0A9AF" Foreground="Black"
                        Click="LogoutButton_Click" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="20">
            <TextBlock Text="Добро пожаловать в систему заказов!" 
                       FontSize="24" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" Foreground="Black"/>
        </Grid>
    </Grid>
</Page>