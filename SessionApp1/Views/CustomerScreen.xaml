<UserControl x:Class="SessionApp1.Views.CustomerScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFE0D5CA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Панель заказчика" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Каталог изделий" Width="200" Height="50" Margin="10" 
                    FontSize="16" Click="OpenCatalog_Click"/>
            <Button Content="Мои заказы" Width="200" Height="50" Margin="10" 
                    FontSize="16" Click="MyOrders_Click"/>
            </StackPanel>
    </Grid>
</UserControl>