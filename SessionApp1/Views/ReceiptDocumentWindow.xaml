<Window x:Class="SessionApp1.Views.ReceiptDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый документ поступления" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#FFE0D5CA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Документ поступления материалов" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Номер документа:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="DocNumberTextBox" Width="300" IsReadOnly="True" Background="#FFF0F0F0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Дата:" Width="150" VerticalAlignment="Center"/>
                <DatePicker x:Name="DocDatePicker" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Поставщик:" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="SupplierTextBox" Width="400"/>
            </StackPanel>
        </StackPanel>

        <!-- ИСПРАВЛЕНО: Добавлена колонка "Ед. изм." -->
        <DataGrid x:Name="ItemsDataGrid" Grid.Row="2" Margin="0,20,0,0"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <!-- Материал -->
                <DataGridComboBoxColumn Header="Материал" Width="*" 
                                        x:Name="MaterialComboColumn"
                                        SelectedValueBinding="{Binding MaterialArticle, UpdateSourceTrigger=PropertyChanged}"
                                        DisplayMemberPath="Value"
                                        SelectedValuePath="Key"/>

                <!-- Количество -->
                <DataGridTextColumn Header="Количество" Width="100"
                                    Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"/>

                <!-- ДОБАВЛЕНО: Единица измерения (только для чтения, автоматически заполняется) -->
                <DataGridTextColumn Header="Ед. изм." Width="80" IsReadOnly="True"
                                    Binding="{Binding Unit}"/>

                <!-- Цена за единицу -->
                <DataGridTextColumn Header="Цена за ед." Width="100"
                                    Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"/>

                <!-- Сумма -->
                <DataGridTextColumn Header="Сумма" Width="120" IsReadOnly="True"
                                    Binding="{Binding TotalAmount, StringFormat=C}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock x:Name="TotalSumTextBlock" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button x:Name="AddRowButton" Content="Добавить строку" Width="120" Height="30" Margin="5,0" Click="AddRowButton_Click"/>
            <Button x:Name="SaveButton" Content="Провести и закрыть" Width="150" Height="30" Margin="10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
