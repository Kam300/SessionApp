<Page x:Class="SessionApp1.Views.FabricsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:SessionApp1.Converters"
      Title="Список тканей"
      Background="#FFE0D5CA">

    <Page.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Список тканей" FontSize="24" FontWeight="Bold" 
                  Foreground="Black" Margin="0,0,0,20"/>

        <DataGrid x:Name="FabricsDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  AlternatingRowBackground="#FFF5F5F5"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="120">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Изображение" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                                <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" 
                                       Width="100" Height="100" 
                                       Stretch="UniformToFill"
                                       ToolTip="{Binding ImagePath}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding FabricName}" Width="150"/>
                <DataGridTextColumn Header="Цвет" Binding="{Binding ColorName}" Width="100"/>
                <DataGridTextColumn Header="Узор" Binding="{Binding PatternName}" Width="100"/>
                <DataGridTextColumn Header="Состав" Binding="{Binding CompositionName}" Width="120"/>
                <DataGridTextColumn Header="Ширина (мм)" Binding="{Binding WidthMm}" Width="100"/>
                <DataGridTextColumn Header="Длина (мм)" Binding="{Binding LengthMm}" Width="100"/>
                <DataGridTextColumn Header="Единица" Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
