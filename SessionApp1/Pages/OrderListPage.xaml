<Page x:Class="SessionApp1.Pages.OrderListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SessionApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Список заказов">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Список заказов" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Фильтры -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Период -->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Период с:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="1" Grid.Row="0" x:Name="StartDatePicker" SelectedDate="{Binding StartDate}" Margin="0,0,10,0"/>
            
            <TextBlock Grid.Column="2" Grid.Row="0" Text="по:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="3" Grid.Row="0" x:Name="EndDatePicker" SelectedDate="{Binding EndDate}" Margin="0,0,10,0"/>

            <!-- Статус заказа -->
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Статус:" VerticalAlignment="Center" Margin="0,10,10,0"/>
            <ComboBox Grid.Column="1" Grid.Row="1" x:Name="StatusComboBox" SelectedIndex="0" Margin="0,10,10,0">
                <ComboBoxItem Content="Все статусы"/>
                <ComboBoxItem Content="Новый"/>
                <ComboBoxItem Content="Ожидает"/>
                <ComboBoxItem Content="Обработка"/>
                <ComboBoxItem Content="Отклонен"/>
                <ComboBoxItem Content="К оплате"/>
                <ComboBoxItem Content="Оплачен"/>
                <ComboBoxItem Content="Раскрой"/>
                <ComboBoxItem Content="Готов"/>
            </ComboBox>

            <!-- Заказчик -->
            <TextBlock Grid.Column="2" Grid.Row="1" Text="Заказчик:" VerticalAlignment="Center" Margin="0,10,10,0"/>
            <TextBox Grid.Column="3" Grid.Row="1" x:Name="CustomerFilterTextBox" Margin="0,10,10,0"/>

            <!-- Номер заказа -->
            <TextBlock Grid.Column="4" Grid.Row="1" Text="№ заказа:" VerticalAlignment="Center" Margin="0,10,10,0"/>
            <TextBox Grid.Column="5" Grid.Row="1" x:Name="OrderNumberFilterTextBox" Margin="0,10,10,0"/>

            <!-- Кнопка применения фильтра -->
            <Button Grid.Column="6" Grid.Row="0" Grid.RowSpan="2" x:Name="ApplyFilterButton" Content="Применить" Padding="10,5" 
                    VerticalAlignment="Center" Click="ApplyFilterButton_Click"/>
        </Grid>

        <!-- Таблица заказов -->
        <DataGrid Grid.Row="2" x:Name="OrdersDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                  AlternatingRowBackground="#F5F5F5" CanUserSortColumns="True" Margin="0,0,0,10"
                  MouseDoubleClick="OrdersDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ заказа" Binding="{Binding OrderNumber}" Width="100"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Заказчик" Binding="{Binding CustomerName}" Width="*"/>
                <DataGridTextColumn Header="Менеджер" Binding="{Binding ManagerName}" Width="*"/>
                <DataGridTextColumn Header="Кол-во изделий" Binding="{Binding TotalItems}" Width="100"/>
                <DataGridTemplateColumn Header="Статус" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Padding="5,2" Background="{Binding StatusColor}">
                                <TextBlock Text="{Binding StatusName}" HorizontalAlignment="Center" Foreground="White"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="PrintButton" Content="Печать" Width="100" Margin="0,0,10,0" Click="PrintButton_Click"/>
            <Button x:Name="ExportButton" Content="Экспорт" Width="100" Margin="0,0,10,0" Click="ExportButton_Click"/>
            <Button x:Name="CloseButton" Content="Закрыть" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Page>