<Page x:Class="SessionApp1.Pages.MaterialStockReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SessionApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Отчет по остаткам материалов">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Отчет по остаткам материалов" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Фильтры -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Тип материала:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" x:Name="MaterialTypeComboBox" SelectedIndex="0" Margin="0,0,10,0">
                <ComboBoxItem Content="Все материалы"/>
                <ComboBoxItem Content="Ткани"/>
                <ComboBoxItem Content="Фурнитура"/>
            </ComboBox>

            <TextBlock Grid.Column="2" Text="Артикул:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="3" x:Name="ArticleFilterTextBox" Width="150" Margin="0,0,10,0"/>

            <Button Grid.Column="4" x:Name="ApplyFilterButton" Content="Применить" Padding="10,5" Click="ApplyFilterButton_Click"/>
        </Grid>

        <!-- Таблица остатков -->
        <DataGrid Grid.Row="2" x:Name="StockDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                  AlternatingRowBackground="#F5F5F5" CanUserSortColumns="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="100"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity, StringFormat=N3}" Width="100"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat=N2}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="PrintButton" Content="Печать" Width="100" Margin="0,0,10,0" Click="PrintButton_Click"/>
            <Button x:Name="ExportButton" Content="Экспорт" Width="100" Margin="0,0,10,0" Click="ExportButton_Click"/>
            <Button x:Name="CloseButton" Content="Закрыть" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Page>