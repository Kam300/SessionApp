<Page x:Class="SessionApp1.Pages.MaterialMovementReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SessionApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Отчет по движению материалов">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Отчет по движению материалов" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Фильтры -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Период -->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Период с:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="1" Grid.Row="0" x:Name="StartDatePicker" SelectedDate="{Binding StartDate}" Margin="0,0,10,0"/>
            
            <TextBlock Grid.Column="2" Grid.Row="0" Text="по:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="3" Grid.Row="0" x:Name="EndDatePicker" SelectedDate="{Binding EndDate}" Margin="0,0,10,0"/>

            <!-- Тип материала -->
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Тип материала:" VerticalAlignment="Center" Margin="0,10,10,0"/>
            <ComboBox Grid.Column="1" Grid.Row="1" x:Name="MaterialTypeComboBox" SelectedIndex="0" Margin="0,10,10,0">
                <ComboBoxItem Content="Все материалы"/>
                <ComboBoxItem Content="Ткани"/>
                <ComboBoxItem Content="Фурнитура"/>
            </ComboBox>

            <!-- Артикул -->
            <TextBlock Grid.Column="2" Grid.Row="1" Text="Артикул:" VerticalAlignment="Center" Margin="0,10,10,0"/>
            <TextBox Grid.Column="3" Grid.Row="1" x:Name="ArticleFilterTextBox" Margin="0,10,10,0"/>

            <!-- Кнопка применения фильтра -->
            <Button Grid.Column="6" Grid.Row="0" Grid.RowSpan="2" x:Name="ApplyFilterButton" Content="Применить" Padding="10,5" 
                    VerticalAlignment="Center" Click="ApplyFilterButton_Click"/>
        </Grid>

        <!-- Таблица движения -->
        <DataGrid Grid.Row="2" x:Name="MovementDataGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                  AlternatingRowBackground="#F5F5F5" CanUserSortColumns="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="100"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Нач. остаток" Binding="{Binding InitialQuantity, StringFormat=N3}" Width="100"/>
                <DataGridTextColumn Header="Приход" Binding="{Binding ReceiptQuantity, StringFormat=N3}" Width="100"/>
                <DataGridTextColumn Header="Расход" Binding="{Binding ExpenseQuantity, StringFormat=N3}" Width="100"/>
                <DataGridTextColumn Header="Кон. остаток" Binding="{Binding FinalQuantity, StringFormat=N3}" Width="100"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Нач. сумма" Binding="{Binding InitialAmount, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Приход сумма" Binding="{Binding ReceiptAmount, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Расход сумма" Binding="{Binding ExpenseAmount, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Кон. сумма" Binding="{Binding FinalAmount, StringFormat=N2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="PrintButton" Content="Печать" Width="100" Margin="0,0,10,0" Click="PrintButton_Click"/>
            <Button x:Name="ExportButton" Content="Экспорт" Width="100" Margin="0,0,10,0" Click="ExportButton_Click"/>
            <Button x:Name="CloseButton" Content="Закрыть" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Page>